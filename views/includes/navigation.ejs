<header class="main-header">
	<nav class="main-header__nav">
		<ul class="main-header__item-list">
			<li class="main-header__item">
				<a class="<%= path === '/' ? 'active' : '' %>" href="/">쇼핑몰</a>
			</li>
            <li class="main-header__item">
				<a class="<%= path === '/products' ? 'active' : '' %>" href="/products">상품 리스트</a>
			</li>
			<% if (isAuthenticated) { %>
				<li class="main-header__item">
					<a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">장바구니</a>
				</li>
				<li class="main-header__item">
					<a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">주문</a>
				</li>
				<li class="main-header__item">
					<a class="<%= path === '/admin/add-product' ? 'active' : '' %>" href="/admin/add-product">상품 추가</a>
				</li>
				<li class="main-header__item">
					<a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products">상품 관리</a>
				</li>
			<% } %>
		</ul>
		<ul class="main-header__item-list">
			<% if (!isAuthenticated) { %>
				<li class="main-header__item">
					<a class="<%= path === '/login' ? 'active' : '' %>" href="/login">로그인</a>
				</li>
                <li class="main-header__item">
                    <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">회원가입</a>
                </li>
			<% } else { %>			
				<li class="main-header__item">
					<form action="/logout" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
						<button type="submit">로그아웃</button>
					</form>
				</li>
			<% } %>
		</ul>
	</nav>
</header>

<nav class="mobile-nav">
    <ul class="mobile-nav__item-list">
        <li class="mobile-nav__item">
            <a class="<%= path === '/' ? 'active' : '' %>" href="/">쇼핑몰</a>
        </li>
        <li class="mobile-nav__item">
            <a class="<%= path === '/products' ? 'active' : '' %>" href="/products">상품 리스트</a>
        </li>
        <% if (isAuthenticated) { %>
            <li class="mobile-nav__item">
                <a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">장바구니</a>
            </li>
            <li class="mobile-nav__item">
                <a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">주문</a>
            </li>
            <li class="mobile-nav__item">
                <a class="<%= path === '/admin/add-product' ? 'active' : '' %>" href="/admin/add-product">상품 추가
                </a>
            </li>
            <li class="mobile-nav__item">
                <a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products">상품 관리
                </a>
            </li>
        <% } %>
        <% if (!isAuthenticated) { %>
            <li class="mobile-nav__item">
                <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">로그인</a>
            </li>
            <li class="mobile-nav__item">
                <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">회원가입</a>
            </li>
        <% } else { %>
            <li class="mobile-nav__item">
                <form action="/logout" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit">로그아웃</button>
                </form>
            </li>
        <% } %>
    </ul>
</nav>